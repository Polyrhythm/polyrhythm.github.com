@import 'nib'

global-reset()

html, body
  margin: 0
  padding: 0
  height: 100%
  width: 100%

h1, h2, h3, p, a, li
  font-family: 'Montserrat Alternates', sans-serif

.cf
  clearfix()

#wrapper
  position: relative
  margin: 0 auto
  width: 100%
  height: auto !important
  min-height: 100%

#page-container
  padding-bottom: 5em

  &:after
    content: ''
    width: 100%
    height: 0.8em
    background: black
    position: absolute
    top: 4.5em
    left: 0

#footer-container
  width: 100%
  position: absolute
  bottom: 0
  background: #ddd
  border-top: 1px solid black
  height: 30px
 
// top section
.profile
  margin-left: 10em
  position: relative
  z-index: 10
  text-align: center
  cursor: pointer
  display: inline-block
  transition-property: margin-left
  transition-duration: 0.5s

  &:hover
    margin-left: 11em
    transition-property: margin-left
    transition-duration: 0.5s

    > h1
      opacity: 1
      transition-property: opacity
      transition-duration: 0.5s

  > h1
    opacity: 0.5
    font-size: 2em
    font-weight: bold
    transition-property: opacity
    transition-duration: 0.5s

  .bubble
    border-radius: 50%
    border: 10px solid black
    display: inline-block
    overflow: hidden
    height: 110px
    width: 110px
    
    > img
      width: 120px
      height: 120px

@media screen and (max-width: 700px)
  .profile
    display: block
    margin: 0 auto
    &:hover
      margin-left: inherit

// middle stuff
.section-wrapper
  max-width: 900px
  margin: 3em auto
  padding: 0 2em
  
  .section
    display: inline-block
    width: 50%
    float: left

    .content
      padding: 1em

      > h2
        font-size: 1.8em
        display: inline-block
        margin-bottom: 1em

.section-li
  border-left: 1px solid #555
  padding-left: 0.5em
  position: relative
  padding-top: 1em
  margin-bottom: 2em
  text-align: left

  .position
    font-weight: bold
    color: #E01B5D

  .date
    opacity: 0.8
    font-size: 1em
    font-family: monospace
    position: absolute
    top: -0.5em
    left: 1em

.skill-ul
  .skill-li
    display: inline-block
    padding: 0.3em
    border: 5px solid black
    border-radius: 10px
    opacity: 0.7
    margin: 0 0.2em 0.2em 0
    font-size: 1.2em
    font-weight: bold
    transition-property: opacity
    transition-duration: 0.5s
    cursor: pointer

    &:hover
      opacity: 1
      transition-property: opacity
      transition-duration: 0.5s

@media screen and (max-width: 700px)
  .section-wrapper
    .section
      width: 100%
      text-align: center

      .skill-ul
        text-align: center
